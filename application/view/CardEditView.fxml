<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<VBox prefHeight="175.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.CardEditController">
   <children>
      <TextField fx:id="question" promptText="Question">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="answer" promptText="Answer">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="tags" promptText="Tags - Separate with commas">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <Button fx:id="okButton" mnemonicParsing="false" onAction="#handleOk" prefWidth="60.0" text="Ok" />
            <Button fx:id="remove" layoutX="108.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleRemove" prefWidth="60.0" text="Remove" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" prefWidth="60.0" text="Delete" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefWidth="60.0" text="Cancel" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
